#!/bin/bash

GREEN='\033[0;32m'
NC='\033[0m' # No Color

(( i = 0 ))
echo $COMMAD_STACK | while read line; do
    [[ $i < $COMMAD_POINTER ]] && prefix="- "
    [[ $i > $COMMAD_POINTER ]] && prefix="+ "
    [[ $i = $COMMAD_POINTER ]] && prefix="${GREEN}* ${NC}"
    echo "$i $prefix$line"
    (( i += 1 ))
done
