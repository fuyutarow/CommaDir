#!/bin/bash

if [[ $# = 0 ]]; then
    cd $HOME
elif [[ -f $@ ]]; then
    cd "$(dirname $@)"
elif [[ -d $@ ]]; then
    cd "$@"
else
    echo -en "$@: Not found. Do you make it as dirctory? [y/N] " 
    read  response
    if [[ "$response" =~ ^([yY][eE][sS]|[yY])+$ ]]; then
        mkdir -p "$@"
    fi
    cd "$@"
fi
[[ $PWD = $OLDPWD ]] && return;

COMMAD_STACK=$(echo $COMMAD_STACK | head -$(( $COMMAD_POINTER + 1 )) )
COMMAD_STACK=${COMMAD_STACK}"\n$PWD"
(( COMMAD_POINTER += 1 ))
